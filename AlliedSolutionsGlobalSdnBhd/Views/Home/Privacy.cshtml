@model IEnumerable<AlliedSolutionsGlobalSdnBhd.Models.PLCControlsDTO>

<div class="text-center">
    <h1 class="display-4">Table PLCControls</h1>
</div>

@if (Model.Count() > 0)
{
        <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>
                        No.
                    </th>
                    <th>
                        Device Name
                    </th>
                    <th>
                        Gateway
                    </th>
                    <th>
                        Command Tag
                    </th>
                    <th>
                        Status Tag
                    </th>
                    <th>
                        Data Tag
                    </th>
                    <th>
                        Download
                    </th>
                    <th>
                        PLC Type
                    </th>
                    <th>
                        CP Name
                    </th>
                    <th>
                        Message
                    </th>
                    <th>
                        Time Sync
                    </th>
                </tr>
            </thead>

            <tbody>
            @{
                int i = 1;
            }
            @foreach (var EqpReservations in Model)
            {

                    <tr>
                        <td>
                            @i
                        </td>
                        <td>
                            @EqpReservations.DeviceName
                        </td>
                        <td>
                            @EqpReservations.Gateway
                        </td>
                        <td>
                            @EqpReservations.CommandTag
                        </td>
                        <td>
                            @EqpReservations.StatusTag
                        </td>
                        <td>
                            @EqpReservations.DataTag
                        </td>
                        <td>
                            @EqpReservations.Download
                        </td>
                        <td>
                            @EqpReservations.PLCType
                        </td>
                        <td>
                            @EqpReservations.CPName
                        </td>
                        <td>
                            @EqpReservations.Message
                        </td>
                        <td>
                            @EqpReservations.TimeSync
                        </td>
                    </tr>
                i++;
            }

                </tbody>
        </table>

}

else
{
                <p>
                    Not Exist
                </p>
}
